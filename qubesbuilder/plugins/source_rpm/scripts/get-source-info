# This script parses and creates a file containing package info
# necessary for the build process.

set -e
set -o pipefail

# Default redirection or errors
ERR_OUTPUT="/dev/null"

if [ "${DEBUG}" == 1 ]; then
    set -x
    ERR_OUTPUT="/dev/stderr"
fi

if test $# -ne 3; then
	echo "Usage: source_dir spec_file dist_tag"
	exit 1
fi

SOURCE_DIR="$1"
SPEC_FILE="$2"
DIST_TAG="$3"

SCRIPTS_DIR="$(dirname "$0")"
SPEC_BN="$(basename "$SPEC_FILE")"
SPEC_BN="${SPEC_BN%.spec}"

"${SCRIPTS_DIR}"/query-spec \
    "$SOURCE_DIR" "$SPEC_FILE" '%{name}-%{version}-%{release}\n' "${DIST_TAG}" 2>$ERR_OUTPUT | { head -1 && cat >/dev/null; } > "${SOURCE_DIR}/${SPEC_BN}_package_release_name"

"${SCRIPTS_DIR}"/query-spec \
    "$SOURCE_DIR" "$SPEC_FILE" '%{SOURCE0}' "${DIST_TAG}" 2>$ERR_OUTPUT | awk '{print $2}' >> "${SOURCE_DIR}/${SPEC_BN}_package_release_name"

"${SCRIPTS_DIR}"/query-spec \
    "$SOURCE_DIR" "$SPEC_FILE" PACKAGES_LIST "${DIST_TAG}" 2>$ERR_OUTPUT \
    > "${SOURCE_DIR}/${SPEC_BN}_packages.list"
